<amp-sidebar class="styleguide__sidebar" id="sidebar" layout="nodisplay" side="left">
  {% set demoAtoms = g.collection('/content/styleguide/atoms') %}
  <section>
    {% if demoAtoms %}
    <p class="styleguide__sidebar-title">Atoms</p>
    <ul>
      {% for doc in demoAtoms %}
      <li>
        <a class="ad-m-lnk" href="{{ doc.url|relative }}">
					{{ atoms.icon('internal', 'ad-m-lnk-icon') }}
					<span class="ad-m-lnk-text">{{ doc.title }}</span>
				</a>
      </li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  {% set demoMolecules = g.collection('/content/styleguide/molecules') %}
