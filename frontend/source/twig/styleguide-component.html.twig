{% extends 'default.html.twig' %}

{% block content %}
{# Always asume that the pages parent is the category #}
<section class="ad-o-stage">
  <div class="ad-o-stage-container ad-o-stage-container-bg-grey">
    <div class="ad-o-stage-content">
      {% set parent = page.parent %}
      {% if parent %}
      <h3>{{ parent.title }}</h3>
      {% endif %}
      <h1>{{ page.title }}</h1>
    </div>
  </div>
</section>

{{ page.content }}

{% if shortcode.section.howToUse %}
<hr>
{# How to use #}
<h3>{{ "AMP_DEV.STYLEGUIDE.HOW_TO_USE"|t }}</h3>
{{ shortcode.section.howToUse }}
{% endif %}

{% if shortcode.section.demo %}
<hr>
<h3>{{ "AMP_DEV.STYLEGUIDE.DEMO"|t }}</h3>
{{ shortcode.section.demo }}
{% endif %}
{% endblock %}
